@{
    ViewBag.Title = "Index";
}

<h4> لیست ویژگی ها</h4>

<p>
    <a onclick="Create()" class="btn btn-success">افزودن ویژگی جدید </a>
</p>
<div id="featuresList">
    @Html.Action("ListFeatures")
</div>
<!-- Modal -->
<div class="modal fade" id="featuresModal" tabindex="-1" role="dialog" aria-labelledby="groupsModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="featuresModalLabel">Modal title</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body" id="featuresModalBody">
                <div id="errors"></div>
            </div>
        </div>
    </div>
</div>

@section scripts
    {
    <script>


        function Create() {
            $.get("/Admin/Features/Create", function (result) {
                $("#featuresModalLabel").html("افزودن ویژگی جدید");
                $("#featuresModalBody").html(result);
                $("#featuresModal").modal();
            });
        }

        function successAjax() {
            $("#featuresModal").modal('hide');
        }

        function Edit(id) {
            $.get("/Admin/Features/Edit/" + id, function (result) {
                $("#featuresModalLabel").html("ویرایش ویژگی ");
                $("#featuresModalBody").html(result);
                $("#featuresModal").modal();
            });
        }


        function Delete(id) {
            $.get("/Admin/Features/Delete/" + id, function (result) {
                $("#featuresModalLabel").html("حذف ویژگی ");
                $("#featuresModalBody").html(result);
                $("#featuresModal").modal();
            });
        }


    </script>
}