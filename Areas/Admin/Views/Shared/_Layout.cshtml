<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link rel="stylesheet" type="text/css" href="/Content/css/bootstrap.min.css">
    <link rel="stylesheet" type="text/css" href="/Content/css/bootstrap-rtl.min.css">
    <link rel="stylesheet" type="text/css" href="/Content/css/font-awesome.min.css">
    <script src="/Content/js/jquery-v1.11.3.js"></script>
    <script src="/Content/js/modernizr.js"></script>
</head>
<body dir="rtl">
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("پنل مدیریت", "Index", "Home", new { area = "Admin" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                </ul>
            </div>
        </div>
    </div>

    <div class="container body-content">
        <div style="height:50px;"></div>
        <div class="row">
            <div class="col-lg-9 pull-left">
                    @RenderBody()
            </div>
            <div class="col-lg-3">
                <div class="margin-top-25">
                    <div class="list-group">
                        <a href="/Admin/Users/Index" class="list-group-item list-group-item-action"><i class="fa fa-users"></i> <label>مدیریت کاربران</label> </a>
                        <a href="/Admin/Product_Groups/Index" class="list-group-item list-group-item-action"><i class="fa fa-list-alt"></i> <label>مدیریت گروه بندی ها</label> </a>
                        <a href="/Admin/Features/Index" class="list-group-item list-group-item-action"><i class="fa fa-list-alt"></i> <label>مدیریت ویژگی ها</label> </a>
                        <a href="/Admin/Products/Index" class="list-group-item list-group-item-action"><i class="fa fa-list-alt"></i> <label>مدیریت محصولات</label> </a>
                        <a href="/Admin/Sliders/Index" class="list-group-item list-group-item-action"><i class="fa fa-list-alt"></i> <label>مدیریت اسلایدرها</label> </a>
                    </div>
                </div>

                <div class="clearfix"></div>
            </div>
        </div>


        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

            <script src="/Content/js/bootstrap.min.js"></script>
            <script src="~/Content/js/jquery.validate.min.js"></script>
            <script src="~/Content/js/jquery.validate.unobtrusive.min.js"></script>
            <script src="~/Content/js/jquery.unobtrusive-ajax.min.js"></script>
            @RenderSection("scripts", false)
</body>
</html>