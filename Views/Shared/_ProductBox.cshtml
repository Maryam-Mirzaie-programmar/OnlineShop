@model Datalayer.Product

<div class="col-md-4 col-sm-6">
    <div class="border-radius">

        <div class="text-center">
            <a href="/SingleProduct/@Model.ProductID"> 
                <img class="img-box" src="~/Images/ProductImages/Thumb/@Model.ProductImageName" style="height:120px;">
            </a>
        </div>

        <h2 class="text-center">
            <a href="/SingleProduct/@Model.ProductID">
                @Model.ProductTitle
            </a>
        </h2>

        <h6>افزودن به لیست مقایسه <input type="checkbox"></h6>
        <span class="col-md-9 col-sm-9 col-xs-9 price-layer">
            <label>@Model.ProductPrice.ToString("#,0")  تومان</label>
        </span>
        <a href="" class="col-md-2 col-sm-2 col-xs-2 col-md-offset-1 col-sm-offset-1 col-xs-offset-1 buy-button border-radius">
            <label><i class="fa fa-shopping-basket"></i></label>
        </a>
    </div>
</div>
